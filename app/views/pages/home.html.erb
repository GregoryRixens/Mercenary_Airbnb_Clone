<%= render "pages/header" %>
<div class="home-background">
  <div class="container-home"> <!-- Modification de la classe container -->
    <div class="d-flex justify-content-between align-items-center">
      <div class="ms-3">
        <h2 class="title">Mercenaires de la semaine</h2>
      </div>
      <div class="me-5 mt-4">
        <%= link_to "<strong>TOUT NOS MERCENAIRES</strong>  <i class='fas fa-arrow-right-long fa-3x ms-3'></i>".html_safe, offers_path, class: "btn d-flex align-items-center text-white" %>
      </div>
    </div>
    <div class="cards-container-home"> <!-- Modification de la classe cards-container -->
      <% @offers.each do |offer| %>
        <div class="card-home shadow"> <!-- Modification de la classe card -->
          <div class="card-image-home"> <!-- Modification de la classe card-image -->
            <% if offer.photo.attached? == true  %>
              <%= cl_image_tag offer.photo.key, height: 300, width: 400, crop: :fill %>
            <% else %>
              <%= cl_image_tag("download_grlwat", width: 400, height: 300, crop: :fill) %>
            <% end %>
          </div>
          <div class="card-body info">
            <h3 class="card-title m-3"><strong><%= offer.title %></strong></h3>
            <div class="d-flex justify-content-between align-items-center mx-3">
              <h5 class=""><strong><%= offer.job %></strong></h5>
              <h2><strong><%= offer.rank %></strong></h2>
            </div>
            <div class="text-center">
              <p><%= offer.address %></p>
            </div>
            <div class="d-flex justify-content-between align-items-center mx-3 lien">
              <h5 class="mt-3"><%= number_to_currency(offer.price) %> / H</h5>
              <%= link_to image_tag('icons/scroll-unfurled.svg', size: '30x30') + "<i class='fas fa-arrow-right-long fa-3x'></i>".html_safe, offer_path(offer), class: "btn d-flex align-items-center text-black" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
