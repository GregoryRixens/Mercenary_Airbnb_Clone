
<div class="container">
  <h2>Latest Offers</h2>

  <div class="row">
    <% @offers.each do |offer| %>
      <div class="col-md-4 mb-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= offer.title %></h5>

            <p class="card-text"><%= offer.description %></p>
            <p class="card-text">Price: <%= number_to_currency(offer.price) %></p>
            <p class="card-text">Address: <%= offer.address %></p>
            <!-- Add more details as needed -->

            <!-- You can also add a link to view the offer details if required -->
            <%= link_to "View Details", offer_path(offer), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
