<%= simple_form_for(offer) do |f| %>
  <%= f.input :title, label: 'Titre', input_html: { maxlength: 255 }  %>
  <%= f.input :address, label: 'Adresse', input_html: { maxlength: 255 }  %>
  <%= f.input :price, label: 'Taux horaire', numericality: { greater_than_or_equal_to: 0 } %>
  <%= f.input :job, as: :select, collection: Offer.jobs, prompt: 'Choisir sa classe', label: false  %>
  <%= f.input :rank, as: :select, collection: Offer.ranks, prompt: 'Choisir son niveau', label: false  %>
  <%= f.input :description, input_html: { maxlength: 1000 } %>
  <%= f.input :photo, as: :file %>
