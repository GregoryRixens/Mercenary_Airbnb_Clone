<div class="container">
  <h1><%= @offer.title %></h1>
  <% if @offer.photo.attached? == true  %>
  <%= cl_image_tag @offer.photo.key, height: 300, width: 400, crop: :fill %>
  <% else %>
  <%= cl_image_tag("download_grlwat", width: 400, height: 300, crop: :fill) %>
  <% end %>
  <p>Price: <%= @offer.price.to_s %></p>
  <p>Description: <%= @offer.description %></p>
  <p>Address: <%= @offer.address %></p>

  <% if @offer.user == current_user %>
    <%= link_to 'Edit', edit_offer_path(@offer) %>
    <%= link_to 'Delete', offer_path(@offer), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } %>
  <% end %>
    <%= link_to "Back to Home", root_path, class: "btn btn-primary" %>
 <%= link_to "Book now", new_offer_reservation_path(@offer), class: "btn btn-primary" %>
</div>
