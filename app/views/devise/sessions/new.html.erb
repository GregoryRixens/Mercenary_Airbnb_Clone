<div class="container custom-form-container">
  <div class="row justify-content-center align-items-center" style="height: 100vh;">
    <div class="col-md-6 custom-form-column">
      <h2 class="custom-form-header text-center mb-4">Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean, label: "Remember me" if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions text-center">
          <%= f.button :submit, "Log in", class: "custom-button" %>
        </div>
      <% end %>

      <div class="mt-2 py-2">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
