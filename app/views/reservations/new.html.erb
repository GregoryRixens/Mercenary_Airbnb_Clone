<div id="page-container">
<div class="form-column">

  <div class="container-resa">
    <h2>Votre mission</h2>
<div class="form-container">
    <%= simple_form_for [@offer, @reservation] do |f| %>

      <div class="field-resa">
        <%= f.input :description, label: 'Description', input_html: { class: 'form-control' } %>
      </div>

      <div class="field-resa">
        <%= f.input :start_date, as: :datetime, label: 'Date de début', input_html: { class: 'form-control', data: { controller: "flatpickr" } } %>
      </div>

      <div class="field-resa">
        <%= f.input :end_date, as: :datetime, label: 'Date de fin', input_html: { class: 'form-control', data: { controller: "flatpickr" } } %>
      </div>

      <!-- Add other fields as needed -->

      <div class="field-resa">
        <%= f.button :submit, 'Réserver', class: 'btn btn-primary' %>
      </div>

    <% end %>
  </div>

  <!-- Separate form for payment -->
 <!-- Separate form for payment -->
<%= simple_form_for :payment, url: '#', method: :post do |f| %>
  <div class="container-payment">
    <h2>Informations de paiement</h2>

    <div class="field-resa">
      <%= f.input :card_name, label: "Nom sur la carte", required: true, input_html: { class: 'form-control' } %>
    </div>

    <div class="field-resa">
      <%= f.input :card_number, label: "Numéro de la carte", required: true, input_html: { class: 'form-control' } %>
    </div>

    <div class="field-resa">
      <%= f.input :card_expiry, label: "Date d'expiration", as: :string, required: true, input_html: { class: 'form-control' } %>
    </div>

    <div class="field-resa">
      <%= f.input :card_cvv, label: "CVV", required: true, input_html: { class: 'form-control' } %>
    </div>
  </div>
<% end %>


  <!-- Payment bar -->
  <div class="payment-bar">
    <!-- Payment icons -->
    <div class="payment-icons">
      <%= image_tag 'icons/visa.svg', alt: 'Visa', class: 'payment-icon' %>
      <%= image_tag 'icons/mastercard.svg', alt: 'MasterCard', class: 'payment-icon' %>
      <%= image_tag 'icons/amex.svg', alt: 'American Express', class: 'payment-icon' %>
      <%= image_tag 'icons/paypal.svg', alt: 'PayPal', class: 'payment-icon' %>
      <!-- Add more icons as needed -->
    </div>
  </div>

</div>
</div>


