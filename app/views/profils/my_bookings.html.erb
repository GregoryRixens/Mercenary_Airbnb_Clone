<%= render "nav" %>

<div class="container mt-4">
  <h1 class="mb-4 text-white">My Bookings</h1>

  <div class="row">
    <% @bookings.each do |booking| %>
      <div class="card m-3 rounded-4 text-center book" style="max-width: 18rem;">
            <div class="card-header rounded-top-4">Offre: <%= booking.offer.title %></div>
              <div class="card-body">
                <h5 class="card-title"><%= booking.description %></h5>
                <div class="d-flex">
                  <p class="card-text">Start Date: <%= booking.start_date %></p>
                  <p class="card-text">End Date: <%= booking.end_date %></p>
                </div>
                <p class="card-text">Status: <%= booking.status %></p>
              </div>
          </div>
    <% end %>
  </div>
</div>
