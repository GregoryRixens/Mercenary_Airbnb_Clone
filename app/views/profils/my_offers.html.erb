 <%= render "nav" %>
 <div class="div3">
      <h1>My offers</h1>
        <div class="d-flex align-items-center justify-content-between text-center">
          <div class="d-flex">
            <% @profil.offers.each do |offer| %>
              <div class="card m-3" style="width: 20rem;">
                <div class="card-header">
                  <div class="d-flex text-center">
                    <h1><%= offer.title %></h1>
                  </div>
                </div>
                <% if offer.photo.attached? == true  %>
              <%= cl_image_tag offer.photo.key, height: 300, width: 400, crop: :fill, class: "card-img-top" %>
            <% else %>
              <%= cl_image_tag("download_grlwat", width: 400, height: 300, crop: :fill, class: "card-img-top") %>
            <% end %>
                <div class="card-body">
                  <p>Price: <%= offer.price %>$</p>
                  <p>Description: <%= offer.description %></p>
                  <p>Address: <%= offer.address %></p>
                </div>
                <div class="card-footer">
                  <%= link_to 'Edit', edit_offer_path(offer), class: 'btn btn-warning' %>
                  <%= link_to 'Delete', offer_path(offer),class: 'btn btn-warning', data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } %>
                </div>
              </div>
            <% end %>
          </div>
          <div class="d-flex flex-column">

          </div>
        </div>
      </div>
