 <%= render "nav" %>
 <div class="container mt-4">
      <h1 class="text-white mb-4">My offers</h1>
        <div class="d-flex align-items-center justify-content-between text-center">
          <div class="d-flex">
            <% @profil.offers.each do |offer| %>
              <div class="card-home shadow"> <!-- Modification de la classe card -->
          <div class="card-image-home"> <!-- Modification de la classe card-image -->
            <% if offer.photo.attached? == true  %>
              <%= cl_image_tag offer.photo.key, height: 300, width: 400, crop: :fill %>
            <% else %>
              <%= cl_image_tag("download_grlwat", width: 400, height: 300, crop: :fill) %>
            <% end %>
          </div>
          <div class="card-body info">
            <h3 class="card-title m-3"><strong><%= offer.title %></strong></h3>
            <div class="d-flex justify-content-between align-items-center mx-3">
              <h5 class=""><strong><%= offer.job %></strong></h5>
              <h2><strong><%= offer.rank %></strong></h2>
            </div>
            <div class="text-center">
              <p><%= offer.address %></p>
            </div>
            <div class="d-flex justify-content-center align-items-center mx-3 lien">
              <h5 class="mt-3"><%= number_to_currency(offer.price) %> / H</h5>
            </div>
          </div>
        </div>
            <% end %>
          </div>
          <div class="d-flex flex-column">

          </div>
        </div>
      </div>
