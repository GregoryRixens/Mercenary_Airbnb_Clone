<div class="parent m-5">
    <div class="div1 rounded-4 shadow">
      <div class="edit-logo">
        <%= link_to '<i class="fas fa-pen"></i>'.html_safe, edit_profil_path(@profil), class: 'text-black' %>
      </div>
      <div class="p-3">
        <div class="row">
          <div class="col-6 text-center">
            <div class="img-profil shadow">
              <% if @profil.photo.attached? == true  %>
                <%= cl_image_tag @profil.photo.key, class: "img-profil shadow" %>
              <% else %>
                <%= cl_image_tag("download_grlwat", width: 400, height: 300, crop: :fill) %>
              <% end %>
            </div>
            <hr>
            <div>
              <h1><%= @profil.first_name %> <%= @profil.last_name %></h1>
              <p>username : <%= @profil.user_name %></p>
              <p>Email:  <%= @profil.email %></p>
            </div>
          </div>
          <div class="col-6 d-flex flex-column align-items-center justify-content-center text-center">
            <div>
              <h1>123</h1>
              <h3>évaluations</h3>
            </div>
            <hr>
            <div>
              <h1>8,9</h1>
              <h3>note moyenne</h3>
            </div>
            <hr>
            <div>
              <h1>11 ans</h1>
              <h3>expérence</h3>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="div2 rounded-4 shadow">
      <h1 class="text-center">Skills</h1>
    </div>
    <div class="div3">
      <h1>Toutes les missions (123)</h1>
        <div class="d-flex align-items-center justify-content-between text-center">
          <div class="d-flex">
            <% @profil.offers.each do |offer| %>
              <div class="card m-3" style="width: 20rem;">
                <div class="card-header">
                  <div class="d-flex text-center">
                    <h1><%= offer.title %></h1>
                  </div>
                </div>
                <div class="card-body">
                  <p>Price: <%= offer.price %>$</p>
                  <p>Description: <%= offer.description %></p>
                  <p>Address: <%= offer.address %></p>
                </div>
                <div class="card-footer">
                  <%= link_to 'Edit', edit_offer_path(offer), class: 'btn btn-warning' %>
                  <%= link_to 'Delete', offer_path(offer),class: 'btn btn-warning', data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } %>
                </div>
              </div>
            <% end %>
          </div>
          <div class="d-flex flex-column">
            <%= link_to "Bookings Received", bookings_received_profil_path(@profil), class: "btn btn-primary m-2" %>
            <%= link_to 'Create a new offer', new_offer_path(@offer), class: 'btn btn-success m-2' %>
          </div>
        </div>
      </div>
  </div>
