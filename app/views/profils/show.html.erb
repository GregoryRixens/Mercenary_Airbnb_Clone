<div class="parent m-5">
  <div class="div1 rounded-4 shadow">
    <div class="edit-logo">
      <%= link_to '<i class="fas fa-pen"></i>'.html_safe, edit_profil_path(@profil), class: 'text-black' %>
    </div>
    <div class="p-3">
      <div class="row">
        <div class="col-6 text-center">
          <div>
            <%= image_tag 'IMG_2498.PNG', class: "img-profil shadow" %>
          </div>
          <hr>
          <div>
            <h1><%= @profil.first_name %> <%= @profil.last_name %></h1>
            <p>username : <%= @profil.user_name %></p>
            <p>Email:  <%= @profil.email %></p>
          </div>
        </div>
        <div class="col-6 d-flex flex-column align-items-center justify-content-center text-center">
          <div>
            <h1>123</h1>
            <h3>évaluations</h3>
          </div>
          <hr>
          <div>
            <h1>8,9</h1>
            <h3>note moyenne</h3>
          </div>
          <hr>
          <div>
            <h1>11 ans</h1>
            <h3>expérence</h3>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="div2 rounded-4 shadow">
    <div class="text-center">
      <h1>Skills</h1>
    </div>
  </div>
  <div class="div3">
    <div class="card-footer d-flex justify-content-between">
      <div>
        <h2>My Offers</h2>
        <div class="d-flex flex-wrap">
          <% @profil.offers.each do |offer| %>
            <div class="card m-3" style="width: 18rem;">
              <div class="card-header">
                <div class="d-flex">
                  <h1><%= offer.title %></h1>
                </div>
              </div>
              <div class="card-body">
                <p>Price: <%= offer.price %>$</p>
                <p>Description: <%= offer.description %></p>
                <p>Address: <%= offer.address %></p>
              </div>
              <div class="card-footer">
                <%= link_to 'Edit', edit_offer_path(offer), class: 'btn btn-warning' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="d-flex flex-column align-items-center justify-content-center">
        <div class="m-2">
          <%= link_to "Bookings Received", bookings_received_profil_path(@profil), class: "btn btn-primary" %>
        </div>
        <div class="m-2">
          <%= link_to 'Create a new offer', new_offer_path(@offer), class: 'btn btn-success' %>
        </div>
      </div>
    </div>
  </div>
</div>
